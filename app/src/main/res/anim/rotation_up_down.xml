<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <rotate
        android:fromDegrees="30"
        android:toDegrees="0"
        android:duration="300"
        android:pivotX="30%"
        android:pivotY="20%"/>

    <rotate
        android:fromDegrees="-30"
        android:toDegrees="0"
        android:duration="300"
        android:startOffset="300"
        android:pivotX="30%"
        android:pivotY="20%"/>

</set>